<?import javafx.scene.layout.VBox?>
<?import com.github.ericytsang.research2016.announcementresolver.AgentsTableView?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.geometry.Insets?>
<?import com.github.ericytsang.research2016.announcementresolver.DisplayModeComboBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<VBox
        xmlns:fx="http://javafx.com/fxml"
        fx:id="rootLayout"
        fx:controller="com.github.ericytsang.research2016.announcementresolver.AgentsWindow">
    <children>
        <MenuBar>
            <Menu
                    text="File">
                <MenuItem
                        text="Save"
                        onAction="#saveToFile"/>
                <MenuItem
                        text="Load"
                        onAction="#loadFromFile"/>
            </Menu>
        </MenuBar>
        <VBox
                VBox.vgrow="ALWAYS"
                spacing="8.0">
            <padding>
                <Insets
                        top="8.0"
                        left="8.0"
                        bottom="8.0"
                        right="8.0"/>
            </padding>
            <children>
                <AgentsTableView
                        fx:id="agentsTableView"
                        VBox.vgrow="ALWAYS"/>
                <DisplayModeComboBox
                        fx:id="displayModeComboBox"
                        onAction="#onDisplayModeChanged"/>
                <HBox
                        spacing="8.0">
                    <Label
                            fx:id="announcementLabel"
                            HBox.hgrow="ALWAYS"
                            maxWidth="Infinity"/>
                    <Button
                            fx:id="cancelButton"
                            text="Cancel"
                            onAction="#cancelAnnouncementFinding"/>
                    <Button
                            fx:id="findAnnouncementButton"
                            text="Find announcement"
                            onAction="#beginAnnouncementFinding"/>
                    <Button
                            text="Commit"
                            onAction="#commitAnnouncement"/>
                </HBox>
            </children>
        </VBox>
    </children>
</VBox>
