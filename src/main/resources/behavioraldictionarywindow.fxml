<?import javafx.scene.layout.VBox?>
<?import com.github.ericytsang.research2016.announcementresolver.guicomponent.BehavioralDictionaryTableView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<VBox
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="com.github.ericytsang.research2016.announcementresolver.window.BehaviouralDictionaryWindowController"
    prefWidth="400.0"
    prefHeight="400.0">
    <MenuBar>
        <Menu
            text="File">
            <MenuItem
                text="Save"
                onAction="#saveToFile"/>
            <MenuItem
                text="Load"
                onAction="#loadFromFile"/>
            <MenuItem
                text="Close"
                onAction="#closeWindow"/>
        </Menu>
        <!--<Menu
            text="Help">
            <MenuItem
                text="About"
                onAction="#showHelpDialog"/>
        </Menu>-->
    </MenuBar>
    <VBox
        VBox.vgrow="ALWAYS"
        spacing="8.0">
        <padding>
            <Insets
                top="8.0"
                left="8.0"
                bottom="8.0"
                right="8.0"/>
            <Insets
                top="8.0"
                left="8.0"
                bottom="8.0"
                right="8.0"/>
        </padding>
        <BehavioralDictionaryTableView
            fx:id="behaviouralDictionaryTableView"
            VBox.vgrow="ALWAYS"/>
    </VBox>
</VBox>
